{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "api-server",
    "version": "0.1.0",
    "module": "src/index.ts",
    "type": "module",
    "private": false,
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "packageManager": "bun@1.2.21",
    "engines": {
        "node": ">=22",
        "bun": ">=1.2"
    },
    "scripts": {
        "dev": "bun --hot run src/index.ts",
        "typecheck": "tsc --noEmit",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "check": "bun run lint:fix && bun run typecheck && bun run test",
        "docker:start": "docker compose -f docker/docker-compose.dev.yml up -d",
        "docker:stop": "docker compose -f docker/docker-compose.dev.yml down",
        "docker:clear": "docker compose -f docker/docker-compose.dev.yml down -v",
        "docker:logs": "docker compose -f docker/docker-compose.dev.yml logs -f",
        "docker:test:start": "docker compose -f ./docker/docker-compose.test.yml up -d",
        "docker:test:stop": "docker compose -f ./docker/docker-compose.test.yml down",
        "docker:test:clear": "docker compose -f ./docker/docker-compose.test.yml down -v",
        "docker:test:logs": "docker compose -f ./docker/docker-compose.test.yml logs -f"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.4",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/bun": "latest",
        "lefthook": "^2.0.2",
        "rimraf": "^6.1.0"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "hono": "^4.10.4",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.27",
        "typeorm-zod": "^1.0.0",
        "zod": "^4.1.12"
    }
}
