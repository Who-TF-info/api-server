{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "api-server",
    "version": "0.1.0",
    "module": "src/index.ts",
    "type": "module",
    "private": false,
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "engines": {
        "node": ">=22",
        "bun": ">=1.2"
    },
    "scripts": {
        "dev": "bun --hot run src/index.ts",
        "typecheck": "tsc --noEmit",
        "test": "bun test",
        "check": "bun run typecheck && bun run test",
        "migration:create": "bash scripts/create-migration.sh",
        "migration:generate": "bash scripts/generate-migration.sh",
        "migration:show": "bun --bun typeorm migration:show -d src/database/dataSource.ts",
        "migration:run": "bun --bun typeorm migration:run -d src/database/dataSource.ts",
        "migration:revert": "bun --bun typeorm migration:revert -d src/database/dataSource.ts",
        "cli": "bun src/cli.ts"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@who-tf-info/shared": "workspace:*",
        "@keyvhq/core": "^2.1.11",
        "@keyvhq/redis": "^2.1.11",
        "@keyvhq/sqlite": "^2.1.11",
        "commander": "^14.0.2",
        "hono": "^4.10.4",
        "inflection": "^3.0.2",
        "mysql2": "^3.15.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "porkbun-api-client": "^0.1.0",
        "reflect-metadata": "^0.2.2",
        "tagged-keyv-wrapper": "^1.3.0",
        "ts-deepmerge": "^7.0.3",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.27",
        "typeorm-pino-logger": "^0.2.0",
        "typeorm-zod": "^1.0.0",
        "zod": "^3.23.8"
    }
}
